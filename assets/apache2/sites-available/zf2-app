<VirtualHost *:80>
    DocumentRoot /zf2-app/public/
    ServerName localhost
    ServerAlias localhost

    <Directory  /zf2-app/public/>
        Options Indexes FollowSymLinks MultiViews Includes
        AllowOverride Options FileInfo

        Order allow,deny
        Allow from all
        Require all granted
        Satisfy Any

    </Directory>
</VirtualHost>
